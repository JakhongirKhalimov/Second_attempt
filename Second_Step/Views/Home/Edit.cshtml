@model Second_Step.Models.Employee

@{
    ViewData["Title"] = "Edit Employee";
}

<h1>Edit Employee</h1>

<form asp-action="Edit" method="post">
    <div class="form-group">
        <label for="Payroll_Number">Payroll Number</label>
        <input type="text" class="form-control" id="Payroll_Number" name="Payroll_Number" value="@Model.Payroll_Number" required />
    </div>
    <div class="form-group">
        <label for="Forenames">Forenames</label>
        <input type="text" class="form-control" id="Forenames" name="Forenames" value="@Model.Forenames" required />
    </div>
    <div class="form-group">
        <label for="Surname">Surname</label>
        <input type="text" class="form-control" id="Surname" name="Surname" value="@Model.Surname" required />
    </div>
    <div class="form-group">
        <label for="Date_of_Birth">Date of Birth</label>
        <input type="date" class="form-control" id="Date_of_Birth" name="Date_of_Birth" value="@Model.Date_of_Birth.ToString("yyyy-MM-dd")" required />
    </div>
    <div class="form-group">
        <label for="Telephone">Telephone</label>
        <input type="text" class="form-control" id="Telephone" name="Telephone" value="@Model.Telephone" />
    </div>
    <div class="form-group">
        <label for="Mobile">Mobile</label>
        <input type="text" class="form-control" id="Mobile" name="Mobile" value="@Model.Mobile" />
    </div>
    <div class="form-group">
        <label for="Address">Address</label>
        <input type="text" class="form-control" id="Address" name="Address" value="@Model.Address" />
    </div>
    <div class="form-group">
        <label for="Email">Email</label>
        <input type="text" class="form-control" id="EMail_Home" name="EMail_Home" value="@Model.EMail_Home" />
    </div>
    <div class="form-group">
        <label for="Start Date">Start Date</label>
        <input type="text" class="form-control" id="Start_Date" name="Start_Date" value="@Model.Start_Date" />
    </div>
    

    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>
